\expandafter\robustify\csname\inlineCurName\endcsname% robustify
\ifx!##2!\else\xlst@foreach@inline@env@iter##2,\@nil\fi
\fi}%
\def\xlst@foreach@inline@env##1{\xlst@foreach@inline@env@iter##1,\@nil}
